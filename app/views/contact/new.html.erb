<!-- Contact Form Section -->
<div class="hero-section">
  <div class="container text-center">
    <h1 class="hero-title">
      <i class="fas fa-envelope me-3"></i>Contact Us
    </h1>
    <p class="hero-subtitle">Get in touch with our team</p>
    <p class="lead mb-4">We'd love to hear from you. Send us a message and we'll respond as soon as possible.</p>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-lg border-0">
        <div class="card-body p-5">
          <%= form_with model: @contact, url: contact_index_path, local: true, class: "needs-validation", novalidate: true do |form| %>
            <% if @contact.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h4>
                <ul class="mb-0">
                  <% @contact.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-4">
              <%= form.label :name, class: "form-label fw-bold" do %>
                <i class="fas fa-user me-2"></i>Full Name
              <% end %>
              <%= form.text_field :name, 
                  class: "form-control form-control-lg #{'is-invalid' if @contact.errors[:name].any?}", 
                  placeholder: "Enter your full name",
                  required: true %>
              <% if @contact.errors[:name].any? %>
                <div class="invalid-feedback">
                  <%= @contact.errors[:name].first %>
                </div>
              <% end %>
            </div>

            <div class="mb-4">
              <%= form.label :email, class: "form-label fw-bold" do %>
                <i class="fas fa-envelope me-2"></i>Email Address
              <% end %>
              <%= form.email_field :email, 
                  class: "form-control form-control-lg #{'is-invalid' if @contact.errors[:email].any?}", 
                  placeholder: "Enter your email address",
                  required: true %>
              <% if @contact.errors[:email].any? %>
                <div class="invalid-feedback">
                  <%= @contact.errors[:email].first %>
                </div>
              <% end %>
            </div>

            <div class="mb-4">
              <%= form.label :message, class: "form-label fw-bold" do %>
                <i class="fas fa-comment me-2"></i>Message
              <% end %>
              <%= form.text_area :message, 
                  class: "form-control form-control-lg #{'is-invalid' if @contact.errors[:message].any?}", 
                  placeholder: "Tell us how we can help you...",
                  rows: 5,
                  required: true %>
              <% if @contact.errors[:message].any? %>
                <div class="invalid-feedback">
                  <%= @contact.errors[:message].first %>
                </div>
              <% end %>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit "Send Message", class: "btn btn-primary btn-lg" %>
              <%= link_to "Back to Home", root_path, class: "btn btn-outline-secondary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
