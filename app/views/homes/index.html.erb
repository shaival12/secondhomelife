<!-- Hero Section -->
<div class="hero-section">
  <div class="container text-center">
    <h1 class="hero-title">
      <i class="fas fa-home me-3"></i>SecondHomeLife
    </h1>
    <p class="hero-subtitle">Plan B of your life</p>
    <p class="lead mb-4">Discover your perfect second home most beautiful locations</p>
    <div class="d-flex gap-3 justify-content-center flex-wrap">
      <%= link_to new_home_path, class: 'btn btn-light btn-lg px-4' do %>
        <i class="fas fa-plus me-2"></i>Add New Home
      <% end %>
      <%= link_to new_contact_path, class: 'btn btn-outline-light btn-lg px-4' do %>
        <i class="fas fa-envelope me-2"></i>Contact Us
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <!-- Homes Section -->
  <div class="text-center mb-5">
    <h2 class="display-5 fw-bold text-primary mb-3">
      <i class="fas fa-building me-2"></i>Featured Properties
    </h2>
    <p class="lead text-muted">Explore our curated collection of luxury homes</p>
  </div>

  <div class="row">
    <% @homes.each do |home| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
          <% if home.image_url.present? %>
            <%= image_tag home.webp_image_url, 
                class: 'card-img-top', 
                style: 'height: 200px; object-fit: cover;', 
                alt: home.address,
                loading: 'lazy',
                onerror: "this.onerror=null; this.src='#{home.image_url}'" %>
          <% else %>
            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
              <span class="text-muted">No Image</span>
            </div>
          <% end %>
          
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= home.address %></h5>
            <p class="card-text text-muted">
              <%= home.city %>, <%= home.state %> <%= home.zip_code %>
            </p>
            <p class="card-text">
              <strong>$<%= number_with_delimiter(home.price) %></strong>
            </p>
            <p class="card-text">
              <%= home.bedrooms %> bed • <%= home.bathrooms %> bath • <%= number_with_delimiter(home.square_feet) %> sq ft
            </p>
            <% if home.description.present? %>
              <p class="card-text"><%= truncate(home.description, length: 100) %></p>
            <% end %>
            
            <div class="mt-auto">
              <%= link_to home, class: 'btn btn-primary btn-sm me-2' do %>
                <i class="fas fa-eye me-1"></i>View Details
              <% end %>
              <%= link_to edit_home_path(home), class: 'btn btn-outline-secondary btn-sm me-2' do %>
                <i class="fas fa-edit me-1"></i>Edit
              <% end %>
              <%= link_to home, method: :delete, 
                          data: { confirm: 'Are you sure you want to delete this home?' }, 
                          class: 'btn btn-outline-danger btn-sm' do %>
                <i class="fas fa-trash me-1"></i>Delete
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @homes.empty? %>
    <div class="text-center py-5">
      <h3 class="text-muted">No homes available</h3>
      <p class="text-muted">Get started by adding your first home!</p>
      <%= link_to 'Add New Home', new_home_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
