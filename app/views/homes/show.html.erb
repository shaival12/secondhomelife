<div class="container">
  <div class="row">
    <div class="col-md-8">
      <% if @home.image_url.present? %>
        <%= image_tag @home.image_url, class: 'img-fluid rounded mb-4', alt: @home.address %>
      <% else %>
        <div class="bg-light rounded mb-4 d-flex align-items-center justify-content-center" style="height: 400px;">
          <span class="text-muted fs-4">No Image Available</span>
        </div>
      <% end %>
    </div>
    
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title"><%= @home.address %></h2>
          <p class="card-text text-muted mb-3">
            <%= @home.city %>, <%= @home.state %> <%= @home.zip_code %>
          </p>
          
          <div class="mb-3">
            <h3 class="text-primary">$<%= number_with_delimiter(@home.price) %></h3>
          </div>
          
          <div class="row mb-3">
            <div class="col-4 text-center">
              <div class="border rounded p-2">
                <strong><%= @home.bedrooms %></strong><br>
                <small class="text-muted">Bedrooms</small>
              </div>
            </div>
            <div class="col-4 text-center">
              <div class="border rounded p-2">
                <strong><%= @home.bathrooms %></strong><br>
                <small class="text-muted">Bathrooms</small>
              </div>
            </div>
            <div class="col-4 text-center">
              <div class="border rounded p-2">
                <strong><%= number_with_delimiter(@home.square_feet) %></strong><br>
                <small class="text-muted">Sq Ft</small>
              </div>
            </div>
          </div>
          
          <% if @home.description.present? %>
            <div class="mb-3">
              <h5>Description</h5>
              <p class="card-text"><%= @home.description %></p>
            </div>
          <% end %>
          
          <div class="d-grid gap-2">
            <%= link_to 'Edit Home', edit_home_path(@home), class: 'btn btn-primary' %>
            <%= link_to 'Back to Homes', homes_path, class: 'btn btn-outline-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
